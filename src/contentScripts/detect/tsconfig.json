{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}
